            android:name="app.zalora.com.zalora.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="app.zalora.com.zalora.WriteTweetActivity"
            android:label="@string/write_tweet_activity_tittle"
            ></activity>
    </application>

</manifest>